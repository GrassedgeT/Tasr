@page "/col"
@using Microsoft.AspNetCore.Components.Web
<h1>欢迎来到 AI 客服机器人</h1>


<style>
    .card {
        width: 200px;
        height: 100px;
        margin: 10px;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: bold;
        color: white;
        cursor: pointer;
    }

        .card:hover {
            transform: scale(1.1);
            transition: 0.3s;
        }

    .red {
        background-color: crimson;
    }

    .orange {
        background-color: darkorange;
    }

    .yellow {
        background-color: gold;
    }

    .green {
        background-color: limegreen;
    }

    .blue {
        background-color: dodgerblue;
    }

    .purple {
        background-color: mediumpurple;
    }
</style>
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="card red" >你好</div>
		</div>
		<div class="col-md-4">
			<div class="card orange" >你是哪里人?</div>
		</div>
		<div class="col-md-4">
			<div class="card yellow" >你是不是想问我</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="card green">你喜欢什么颜色?</div>
		</div>
		<div class="col-md-4">
			<div class="card blue" >你有什么爱好?</div>
		</div>
		<div class="col-md-4">
			<div class="card purple">你想了解什么?</div>
		</div>
	</div>
</div>



