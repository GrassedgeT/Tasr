@page "/home"
@using Tasr.Library.Services
@inject INavigationService _navigationService
<div class="container">
	<h2>欢迎使用会议记录软件</h2>
	<div class="row">
		<div class="col-md-4">
			<div class="card blue" @onclick="()=>recognizer()">语音输入</div>
		</div>
		<div class="col-md-4">
            <div class="card blue" @onclick="()=>audio()">上传音频</div>
		</div>
		<div class="col-md-4">
            <div class="card blue" @onclick="()=>summary()">会议总结</div>
		</div>
	</div>
</div>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f0f0;
        text-align: center; /* 让文本居中显示 */
    }

    h2 {
        color: dodgerblue;
        margin-top: 20px; /* 调整标题的上边距 */
    }

    .container {
        margin: 20px auto; /* 让容器水平居中 */
    }

    .row {
        display: flex;
        justify-content: center; /* 让行内元素水平居中 */
    }

    .col-md-4 {
        flex: 0 0 auto;
    }

    .card {
        width: 200px;
        height: 100px;
        margin: 10px;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: bold;
        color: white;
        cursor: pointer;
    }

        .card:hover {
            transform: scale(1.1);
            transition: 0.3s;
        }

    .red {
        background-color: crimson;
    }

    .orange {
        background-color: darkorange;
    }

    .yellow {
        background-color: gold;
    }

    .green {
        background-color: limegreen;
    }

    .blue {
        background-color: dodgerblue;
    }

    .purple {
        background-color: mediumpurple;
    }
</style>
